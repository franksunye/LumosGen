{
  "name": "lumosgen",
  "displayName": "LumosGen",
  "description": "AI-powered content generation for VS Code - illuminate your content creation process",
  "version": "0.1.0",
  "publisher": "lumosgen",
  "author": {
    "name": "LumosGen Contributors"
  },
  "license": "MIT",
  "homepage": "https://github.com/franksunye/LumosGen#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/franksunye/LumosGen.git"
  },
  "bugs": {
    "url": "https://github.com/franksunye/LumosGen/issues"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Machine Learning"
  ],
  "keywords": [
    "ai",
    "content generation",
    "markdown",
    "automation",
    "documentation"
  ],
  "activationEvents": [
    "onView:lumosgen.sidebar"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "lumosgen-sidebar",
          "title": "LumosGen",
          "icon": "$(sparkle)"
        }
      ]
    },
    "views": {
      "lumosgen-sidebar": [
        {
          "id": "lumosgen.sidebar",
          "name": "LumosGen Marketing AI",
          "type": "webview"
        }
      ]
    },
    "configuration": {
      "title": "LumosGen",
      "properties": {
        "lumosGen.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable LumosGen marketing AI features"
        },
        "lumosGen.language": {
          "type": "string",
          "default": "en",
          "enum": [
            "en",
            "es",
            "ja",
            "de",
            "fr",
            "pt"
          ],
          "description": "Interface language"
        },
        "lumosGen.watchPatterns": {
          "type": "array",
          "default": [
            "**/*.md"
          ],
          "description": "File patterns to watch for changes"
        },
        "lumosGen.outputFile": {
          "type": "string",
          "default": "LumosGen-Summary.md",
          "description": "Output file name for generated content"
        },
        "lumosGen.aiService": {
          "type": "object",
          "default": {
            "deepseekApiKey": "",
            "deepseekEndpoint": "https://api.deepseek.com",
            "deepseekModel": "deepseek-chat",
            "openaiApiKey": "",
            "openaiEndpoint": "https://api.openai.com/v1",
            "openaiModel": "gpt-4o-mini",
            "degradationStrategy": ["deepseek", "openai", "mock"],
            "monitoringEnabled": true,
            "trackCosts": true,
            "trackUsage": true,
            "mockResponseDelay": 500,
            "mockSimulateErrors": false,
            "mockErrorRate": 0.05
          },
          "properties": {
            "deepseekApiKey": {
              "type": "string",
              "description": "DeepSeek API key for cost-effective AI services"
            },
            "deepseekEndpoint": {
              "type": "string",
              "default": "https://api.deepseek.com",
              "description": "DeepSeek API endpoint"
            },
            "deepseekModel": {
              "type": "string",
              "default": "deepseek-chat",
              "enum": ["deepseek-chat", "deepseek-reasoner"],
              "description": "DeepSeek model to use"
            },
            "openaiApiKey": {
              "type": "string",
              "description": "OpenAI API key for fallback AI services"
            },
            "openaiEndpoint": {
              "type": "string",
              "default": "https://api.openai.com/v1",
              "description": "OpenAI API endpoint"
            },
            "openaiModel": {
              "type": "string",
              "default": "gpt-4o-mini",
              "enum": ["gpt-4o-mini", "gpt-3.5-turbo", "gpt-4"],
              "description": "OpenAI model to use"
            },
            "degradationStrategy": {
              "type": "array",
              "default": ["deepseek", "openai", "mock"],
              "items": {
                "type": "string",
                "enum": ["deepseek", "openai", "mock"]
              },
              "description": "Provider fallback order"
            },
            "monitoringEnabled": {
              "type": "boolean",
              "default": true,
              "description": "Enable usage monitoring and statistics"
            },
            "trackCosts": {
              "type": "boolean",
              "default": true,
              "description": "Track API costs and spending"
            },
            "trackUsage": {
              "type": "boolean",
              "default": true,
              "description": "Track token usage and performance metrics"
            },
            "mockResponseDelay": {
              "type": "number",
              "default": 500,
              "description": "Mock provider response delay in milliseconds"
            },
            "mockSimulateErrors": {
              "type": "boolean",
              "default": false,
              "description": "Enable error simulation in mock provider"
            },
            "mockErrorRate": {
              "type": "number",
              "default": 0.05,
              "minimum": 0,
              "maximum": 1,
              "description": "Mock provider error simulation rate (0-1)"
            }
          },
          "description": "Enhanced AI service configuration with DeepSeek integration and intelligent degradation"
        },
        "lumosGen.marketingSettings": {
          "type": "object",
          "default": {
            "tone": "professional",
            "includeCodeExamples": true,
            "targetMarkets": [
              "global"
            ],
            "seoOptimization": true
          },
          "description": "Marketing content generation settings"
        },
        "lumosGen.deployment": {
          "type": "object",
          "default": {
            "platform": "github-pages",
            "customDomain": "",
            "autoDeployOnGeneration": false
          },
          "description": "Deployment configuration"
        },
        "lumosGen.triggerDelay": {
          "type": "number",
          "default": 2000,
          "description": "Delay in milliseconds before triggering content generation"
        },
        "lumosGen.template": {
          "type": "string",
          "default": "summary",
          "enum": [
            "summary",
            "toc",
            "changelog"
          ],
          "description": "Content generation template"
        }
      }
    },
    "commands": [
      {
        "command": "lumosGen.analyzeProject",
        "title": "Analyze Project for Marketing",
        "category": "LumosGen",
        "icon": "$(search)"
      },
      {
        "command": "lumosGen.generateMarketingContent",
        "title": "Generate Marketing Content",
        "category": "LumosGen",
        "icon": "$(sparkle)"
      },
      {
        "command": "lumosGen.previewWebsite",
        "title": "Preview Marketing Website",
        "category": "LumosGen",
        "icon": "$(preview)"
      },
      {
        "command": "lumosGen.deployToGitHub",
        "title": "Deploy to GitHub Pages",
        "category": "LumosGen",
        "icon": "$(rocket)"
      },
      {
        "command": "lumosGen.generateContent",
        "title": "Generate Content (Legacy)",
        "category": "LumosGen"
      },
      {
        "command": "lumosGen.toggleWatcher",
        "title": "Toggle File Watcher (Legacy)",
        "category": "LumosGen"
      },
      {
        "command": "lumosGen.diagnose",
        "title": "Diagnose Issues",
        "category": "LumosGen"
      },
      {
        "command": "lumosGen.monitorDeployment",
        "title": "Monitor Deployment Health",
        "category": "LumosGen",
        "icon": "$(pulse)"
      },
      {
        "command": "lumosGen.showErrorLogs",
        "title": "Show Error Logs",
        "category": "LumosGen",
        "icon": "$(bug)"
      }
    ],
    "keybindings": [
      {
        "command": "lumosGen.analyzeProject",
        "key": "ctrl+shift+l a",
        "mac": "cmd+shift+l a",
        "when": "editorTextFocus"
      },
      {
        "command": "lumosGen.generateMarketingContent",
        "key": "ctrl+shift+l g",
        "mac": "cmd+shift+l g",
        "when": "editorTextFocus"
      },
      {
        "command": "lumosGen.deployToGitHub",
        "key": "ctrl+shift+l d",
        "mac": "cmd+shift+l d",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./scripts/demo-test.js",
    "lint": "echo 'Linting not configured yet'",
    "clean": "rimraf out",
    "package": "vsce package",
    "demo": "node ./scripts/demo-test.js"
  },
  "devDependencies": {
    "@types/marked": "^5.0.2",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "marked": "^16.2.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "dotenv": "^16.6.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  }
}
